<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sec.android.ssp.balloon.print.MainActivity" >

    <fragment
        class="com.sec.android.ssp.balloon.print.fragments.PrintConfigureFragment"
        android:id="@+id/data_container"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/loadButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/load_caps_button"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/printButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="@string/print_text"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartListening"
            android:text="Start Listening"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStopListening"
            android:text="Stop Listening"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/btnStartListening"/>

        <TextView
            android:id="@+id/txtInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>