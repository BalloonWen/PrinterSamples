<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sec.android.ssp.balloon.print.MainActivity" >


    <fragment
        class="com.sec.android.ssp.balloon.print.fragments.PrintConfigureFragment"
        android:id="@+id/data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/loadButton" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:layout_marginStart="@dimen/button_margin_start"
        android:layout_marginLeft="@dimen/button_margin_start"
        android:padding="@dimen/button_padding"
        android:text="@string/load_caps_button" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/loadButton"
        android:layout_toRightOf="@id/loadButton"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:padding="@dimen/button_padding"
        android:text="@string/print_text" />

</RelativeLayout>